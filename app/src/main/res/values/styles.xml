<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialCardView.Default" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">#e3f2fd</item>
        <item name="cardElevation">3dp</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="LayoutPageTheme" parent="MyTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="TransparentActionBar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="style_item_hourly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="default_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#A6A4A4</item>
    </style>

    <style name="def_style" parent="default_style">
        <item name="elevation">4dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogStyle"
        parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>

    <style name="style_tv_favorite_current_attributes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textColor">#808080</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_current_weather_attributes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
